@{
    ViewData["Title"] = "Cannot Delete School Type";
}

<div class="content-page">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h4 class="card-title">Delete Failed</h4>
                    </div>
                    <div class="card-body text-center">
                        <p class="text-danger">
                            The school type "<strong>@ViewBag.SchoolTypeName</strong>" cannot be deleted because there are schools associated with it.
                        </p>
                        <p>Please remove all associated schools before deleting this child age.</p>
                        <a asp-action="Index" class="btn btn-primary">Back to Child age List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
