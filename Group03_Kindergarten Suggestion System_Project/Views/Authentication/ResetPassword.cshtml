@using Group03_Kindergarten_Suggestion_System_Project.ViewModels
@model ResetPasswordVm

@{
    ViewData["Title"] = "New Password";
}

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .form-control {
        height: 50px;
        border-radius: 10px;
    }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(17, 122, 255, 0.25);
        }

    .btn-primary {
        border-radius: 10px;
        font-weight: bold;
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-primary:hover {
            background-color: #138496;
            border-color: #138496;
        }
</style>

<div class="container-fluid py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card border-0 shadow-lg rounded-lg">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <h1 class="text-primary font-weight-bold">Set New Password</h1>
                            <p class="text-muted">Enter your new password below</p>
                        </div>
                        <form id="newPasswordForm" asp-controller="Authentication" asp-action="ResetPassword" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <input type="hidden" asp-for="Email" />

                            <div class="form-group mb-4">
                                <label asp-for="NewPassword" class="form-label font-weight-bold text-primary">New Password</label>
                                <input asp-for="NewPassword" class="form-control border-primary" placeholder="Enter new password" type="password">
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="ConfirmPassword" class="form-label font-weight-bold text-primary">Confirm Password</label>
                                <input asp-for="ConfirmPassword" class="form-control border-primary" placeholder="Confirm new password" type="password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block py-2 w-100">Reset Password</button>
                        </form>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <img src="~/img/new-password.png" alt="New Password" class="img-fluid" style="max-width: 200px;">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
