@{
    ViewData["Title"] = "Đổi Mật Khẩu";
}

<div class="container-fluid pt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">
                            <i class="fa fa-lock mr-2"></i>Đổi Mật Khẩu
                        </h3>
                    </div>
                    <form>
                        <div class="card-body">
                            <div class="form-group">
                                <label class="text-primary">Mật Khẩu Hiện Tại</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" placeholder="Nhập mật khẩu hiện tại">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-primary" type="button">
                                            <i class="fa fa-eye"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="text-primary">Mật Khẩu Mới</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" placeholder="Nhập mật khẩu mới">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-primary" type="button">
                                            <i class="fa fa-eye"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="text-primary">Xác Nhận Mật Khẩu Mới</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" placeholder="Nhập lại mật khẩu mới">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-primary" type="button">
                                            <i class="fa fa-eye"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="alert alert-info">
                                <i class="fa fa-info-circle mr-2"></i>
                                Mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ hoa, chữ thường và số
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-primary btn-block">
                                        <i class="fa fa-save mr-2"></i>Đổi Mật Khẩu
                                    </button>
                                </div>
                                <div class="col-md-6">
                                    <a href="#" class="btn btn-outline-primary btn-block">
                                        <i class="fa fa-times mr-2"></i>Hủy
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>