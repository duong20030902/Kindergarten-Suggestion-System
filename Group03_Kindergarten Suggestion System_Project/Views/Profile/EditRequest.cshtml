@model SchoolEnrollment

@{
    ViewData["Title"] = "Chỉnh Sửa Đơn Yêu Cầu";
}

<h2 class="text-primary">Chỉnh Sửa Đơn Yêu Cầu</h2>
<hr />

<div class="card border-primary">
    <div class="card-header bg-primary text-white">
        <h4>Thông Tin Đơn Yêu Cầu</h4>
    </div>
    <div class="card-body">
        <form asp-area="" asp-action="EditRequest" asp-controller="Parent" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label>Trường</label>
                <input type="text" class="form-control" value="@Model.School.Name" readonly />
            </div>
            <div class="form-group">
                <label>Mô Tả</label>
                <textarea class="form-control" asp-for="Desctiption" rows="5" required></textarea>
                <span asp-validation-for="Desctiption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Trạng Thái</label>
                <input type="text" class="form-control" value="@Model.Status" readonly />
            </div>
            <div class="form-group text-right">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Quay Lại
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Lưu Thay Đổi
                </button>
            </div>
        </form>
    </div>
</div>
